<%- include ("../partials/header") %>
  
<div class="container">
  <h2 class="text-center">Reset Password</h2>
  <form action="/reset-password/<%= token %>?_method=PUT" method="POST">
    <div class="form-group row col-md-6 mx-auto">
      <input type="password" class="form-control" name="password" id="password" placeholder="New Password" autofocus required>
    </div>
    <div class="form-group row col-md-6 mx-auto">
      <input type="password" class="form-control" name="confirm" id="confirm" placeholder="Confirm Password" required>
    </div>
    <div class="form-group text-center">
      <input type="submit" class="btn btn-primary" value="Update Password">
    </div>
  </form>
</div>

<%- include ("../partials/footer") %>